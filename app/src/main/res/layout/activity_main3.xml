<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/total_calories_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="230dp"
        android:fontFamily="@font/gmarketsansmedium"
        android:text="Total Calories: "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_date_for_calories_button" />

    <TextView
        android:id="@+id/total_cost_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="263dp"
        android:fontFamily="@font/gmarketsansmedium"
        android:text="Total Cost: "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_date_for_cost_button" />

    <Button
        android:id="@+id/select_date_for_cost_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="209dp"
        android:layout_marginBottom="47dp"
        android:backgroundTint="#8BC34A"
        android:fontFamily="@font/gmarketsansmedium"
        android:text="Select Date"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/total_cost_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_calories_text_view" />

    <Button
        android:id="@+id/select_date_for_calories_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="209dp"
        android:layout_marginBottom="42dp"
        android:backgroundTint="#8BC34A"
        android:fontFamily="@font/gmarketsansmedium"
        android:text="Select Date"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/total_calories_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>