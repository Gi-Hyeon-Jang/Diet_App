<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <AutoCompleteTextView
        android:id="@+id/foodNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        android:completionThreshold="1"
        android:hint="Type here"
        app:layout_constraintBottom_toTopOf="@+id/caloriesView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeSpinner" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:text="@string/confirmButton"
        app:layout_constraintBottom_toTopOf="@+id/viewTotalButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/costView" />

    <Button
        android:id="@+id/viewTotalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:text="@string/viewTotalButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmButton" />

    <TextView
        android:id="@+id/caloriesView"
        android:layout_width="182dp"
        android:layout_height="0dp"
        android:layout_marginBottom="51dp"
        android:text="@string/caloriesView"
        app:layout_constraintBottom_toTopOf="@+id/costView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodNameInput" />

    <TextView
        android:id="@+id/costView"
        android:layout_width="158dp"
        android:layout_height="0dp"
        android:layout_marginBottom="99dp"
        android:text="@string/confirmButton"
        app:layout_constraintBottom_toTopOf="@+id/confirmButton"
        app:layout_constraintStart_toStartOf="@+id/caloriesView"
        app:layout_constraintTop_toBottomOf="@+id/caloriesView" />

    <Spinner
        android:id="@+id/placeSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="143dp"
        app:layout_constraintBottom_toTopOf="@+id/foodNameInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>